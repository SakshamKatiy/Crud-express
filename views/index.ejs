<!DOCTYPE html> 
<html lang="en"> 
<head> 
    <meta charset="UTF-8"> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <title><%= page %></title> 
<style> 
    body{ 
        text-align: center; 
        background-color: rgb(16, 16, 104); 
    } 
    h1{ 
        font-size: 3em; 
        color:  #cce1f6; 
        text-decoration: underline; 
    } 
    table { 
        width: 100%; 
        border: 2px groove #4e6c29; 
        margin: auto; 
        background-color: black; 
        color: white; 
        font-size: 1.5em; 
    } 
    th , tr ,td{ 
        border: 4px solid gray; 
    } 
    
</style> 
</head> 
<body> 
    <h1>Student Page</h1> 
    <h3><%= title %></h3> 
    <p><a href="/register">Register Here</a></p> 
 
    <% if (students!= "") { %> 
 
    <table> 
        <tr> 
            <th>Roll No</th> 
            <th>Name </th> 
            <th>Mail</th> 
            <th>Age </th> 
            <th>Operation</th> 
        </tr> 
      <% students.forEach((students,index) => { %> 
        <tr> 
            <td><%= index+1 %></td> 
            <td><%= students.name %></td> 
            <td><%= students.mail %></td> 
            <td><%= students.age %></td> 
            <td><a href="/update/<%= students.id %>">Update</a> | <a href = "/delete/<%= students.id %>" > delete</a></td> 
        </tr> 
   <% }) %> 
    </table> 
    <% } %> 
</body> 
</html>